@model DetalhesJogoModel
@{
    ViewBag.Title = "Detalhes do Jogo";
}
<h2>@ViewBag.Title @Model.Nome</h2>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Jogo</th>
                <th>Categoria</th>
                <th>Selo</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Nome</td>
                <td>@Model.Categoria</td>
                <td>@Model.Selo.ToString()</td>
                <td>@Model.Preco.ToString("c")</td>
            </tr>
        </tbody>
    </table>

    <div class="descricao">
        <p id="descricao">
            Descrição: @Model.Descricao
        </p>
    </div>
    <div>
        <img src="@Html.Raw(Model.Imagem)" />
    </div>
    <p align="center" class="demoVideo">Demo do jogo</p>
    <div>
        @Html.Raw(@Model.Video)
    </div>